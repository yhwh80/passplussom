{
  "name": "driving-instructor-platform",
  "version": "1.0.0",
  "description": "Comprehensive driving instructor management platform with lesson planning, pupil tracking, and business management tools",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./src/css/input.css -o ./public/css/style.css --watch",
    "build:js": "webpack --mode production",
    "test": "jest"
  },
  "keywords": [
    "driving instructor",
    "lesson planning",
    "pupil management",
    "DVSA",
    "driving school",
    "education"
  ],
  "author": "Your Driving School",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.4",
    "multer": "^1.4.5",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "socket.io": "^4.7.2",
    "stripe": "^13.5.0",
    "twilio": "^4.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "jest": "^29.6.2",
    "@types/node": "^20.5.0"
  }
}
